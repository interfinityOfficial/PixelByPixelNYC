    <a href="/" class="title">PIXEL BY PIXEL<br />NYC</a>
    <main>
      <div class="title-placeholder">PIXEL BY PIXEL<br />NYC</div>
      <div class="login-container">
        <div class="subtitle">SIGN UP</div>
        <div class="error-text-container">
          <div class="error-text" id="error-text">AN ERROR OCCURRED</div>
        </div>
        <div class="username-container">
          <input
            type="text"
            placeholder="PICK A USERNAME"
            class="username-input"
            id="username-input"
            maxlength="20"
          />
        </div>
        <button class="passkey-button" id="signup-button">
          <svg
            class="passkey-icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 50 70"
          >
            <g id="Layer_1-2" data-name="Layer_1">
              <path
                d="M40,0H0v30h20v40h0s20,0,20,0v-20h-10v-20h20V0h-10ZM40,20H10v-10h30v10Z"
              />
            </g>
          </svg>
          CONTINUE WITH PASSKEY
        </button>
        <div class="copyright">
          <span>Copyright Â© 2025 interfinity Limited.</span>
        </div>
      </div>
    </main>

    <script src="/signup.js"></script>
  </body>
